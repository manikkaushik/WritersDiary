<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="5dp">
        <p013de.hdodenhof.circleimageview.CircleImageView android:id="@+id/img_notification"
            android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="10dp"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textColor="@color/black"
                android:id="@+id/tv_notification_text" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp" android:fontFamily="@font/ibm_plex_sans_regular"/>
            <TextView android:textSize="12sp" android:textColor="@color/black" android:id="@+id/tv_notification_time"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" android:fontFamily="@font/ibm_plex_sans_light"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
